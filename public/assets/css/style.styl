html,body
	height 100%


body
	font-family 'Source Code Pro', Consolas, 'Courier New'
	background dark
	font-size 1em
	-webkit-font-smoothing antialiased
	cursor text


.chat
	padding 1em 0 0 1em
	margin 0 auto
	max-width w
	color light

	.message
		position relative

		.content
			display inline-block
			max-width -webkit-calc(100% - 2em - 100px)
			max-width         calc(100% - 2em - 100px)
			
			p
				margin 0

		.user
			display inline-block
			color #2ecc71

		&.me
			.content, .user
				color light

		&.pending
			.content
				color #999

		.time
			color #666
			opacity 0
			padding-left 0.5em
			transition all 0.1s ease-out

		&:hover
			.time
				opacity 1
				padding-left 1.5em

		&.pm
			.user
				color #3498db

	.info
		color #f1c40f

		.desc
			color #fff

		.indent
			padding-left 2em

	.emote
		color #2ecc71
		
.messagebox
	max-width w
	display block
	margin 0 auto
	position relative

	.arrow
		position absolute
		top 0
		left 1em
		color #fff

	#message
		font-size 1em
		outline 0
		border 0
		padding 0 35px
		background none
		color #fff
		display block
		width 100%
		-webkit-font-smoothing antialiased

